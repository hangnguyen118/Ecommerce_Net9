@model Category

<h1>Delete Category</h1>
<form method="post">
    <input asp-for="Id" hidden/>
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control" disabled />
    </div>
    <div class="mb-3">
        <label asp-for="Description"></label>
        <input type="text" asp-for="Description" class="form-control" disabled />
    </div>
    <div class="row">
        <div class="col-6">
            <button type="submit" class="btn btn-danger" style="width:100%">Delete</button>
        </div>
        <div class="col-6">
            <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:100%">Back to list</a>
        </div>
    </div>
</form>