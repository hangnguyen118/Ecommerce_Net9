@model List<Product>
@{
    ViewData["Title"] = "Product Page";
}
<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="display-4">Welcome Product Page <i class="bi bi-bell"></i></h1>
        </div>
        <div class="col-6">
            <a asp-controller="Product" asp-area="Admin" asp-action="Upsert" class="btn btn-primary"><i class="bi bi-plus-circle"></i>Create new</a>
        </div>
    </div>
</div>
<div class="text-center">

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Price</th>
                <th>Category</th>
                <th>ImageURL</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Id</td>
                    <td>@obj.Title</td>
                    <td>@obj.Description</td>
                    <td>@obj.Price</td>
                    <td>@obj.CategoryId</td>
                    <td>@(string.IsNullOrEmpty(obj.ImageURL) ? "No Image" : obj.ImageURL)</td>
                    <td>
                        <a asp-controller="Product" asp-area="Admin" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="Product" asp-area="Admin" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-trash3"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>