@model Company

<h1>Delete Company</h1>
<form method="post">
    <input asp-for="Id" hidden />
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control" disabled />
    </div>
    <div class="mb-3">
        <label asp-for="City"></label>
        <input type="text" asp-for="City" class="form-control" disabled />
    </div>
    <div class="mb-3">
        <label asp-for="State"></label>
        <input type="text" asp-for="State" class="form-control" disabled />
    </div>
    <div class="mb-3">
        <label asp-for="StreetAddress"></label>
        <input type="text" asp-for="StreetAddress" class="form-control" disabled />
    </div>
    <div class="mb-3">
        <label asp-for="PostalCode"></label>
        <input type="text" asp-for="PostalCode" class="form-control" disabled />
    </div>
    <div class="mb-3">
        <label asp-for="PhoneNumber"></label>
        <input type="text" asp-for="PhoneNumber" class="form-control" disabled />
    </div>
    <div class="row">
        <div class="col-6">
            <button type="submit" class="btn btn-danger" style="width:100%">Delete</button>
        </div>
        <div class="col-6">
            <a asp-controller="Category" asp-area="Admin" asp-action="Index" class="btn btn-secondary" style="width:100%">Back to list</a>
        </div>
    </div>
</form>