@model List<Company>
@{
    ViewData["Title"] = "Company Manager Page";
}
<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="display-4">Welcome Company Manager Page <i class="bi bi-bell"></i></h1>
        </div>
        <div class="col-6">
            <a asp-controller="Company" asp-area="Admin" asp-action="Upsert" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create new</a>
        </div>
    </div>
</div>
<div class="text-center">

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>City</th>
                <th>State</th>
                <th>Street Address</th>
                <th>Postal Code</th>
                <th>Phone Number</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Id</td>
                    <td>@obj.Name</td>
                    <td>@obj.City</td>
                    <td>@obj.State</td>
                    <td>@obj.StreetAddress</td>
                    <td>@obj.PostalCode</td>
                    <td>@obj.PhoneNumber</td>
                    <td>
                        <a asp-controller="Company" asp-area="Admin" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="Company" asp-area="Admin" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-trash3"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>