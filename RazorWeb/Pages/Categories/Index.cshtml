@page
@model RazorWeb.Pages.Categories.IndexModel

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="display-4">Welcome Category <i class="bi bi-bell"></i></h1>
        </div>
        <div class="col-6">
            <a asp-page="/Categories/Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create new</a>
        </div>
    </div>
</div>
<div class="text-center">
    
    <table class="table table-bordered">
    <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Edit</th>
            </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.CategoryList) {
                <tr>
                    <td>@obj.Id</td>
                    <td>@obj.Name</td>
                    <td>@obj.Description</td>
                    <td>
                        <a asp-page="/categories/edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i></a>
                        <a asp-page="/categories/delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-trash3"></i></a>
                    </td>
                </tr>
        }        
    </tbody>
</table>
</div>